{
  "name": "@cdaxfx/api",
  "version": "0.0.4",
  "description": "",
  "author": "",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build api && nest build forex-api && nest build password-rotate-job && nest build migrations",
    "build:api": "nest build api",
    "build:forex-api": "nest build forex-api",
    "build:migrations": "nest build migrations",
    "build:password-rotate-job": "nest build password-rotate-job",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --setupFiles dotenv/config",
    "test:watch": "jest  --setupFiles dotenv/config --watch",
    "test:cov": "jest  --setupFiles dotenv/config --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand  --setupFiles dotenv/config",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json",
    "db": "mikro-orm schema:update --run",
    "firstdb": "mikro-orm migration:fresh",
    "db:migration": "mikro-orm migration:up"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.2.9",
    "@mikro-orm/nestjs": "^6.0.2",
    "@nestjs/common": "9.2.1",
    "@nestjs/core": "9.2.1",
    "@nestjs/platform-express": "9.2.1",
    "@nestjs/schedule": "^4.0.2",
    "@nestjs/swagger": "^7.4.0",
    "@sendgrid/helpers": "^8.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dayjs": "^1.11.10",
    "dotenv": "16.0.3",
    "helmet": "6.0.1",
    "moment": "^2.30.1",
    "noop2": "2.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.8",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/testing": "9.2.1",
    "@types/express": "4.17.15",
    "@types/jest": "29.2.5",
    "@types/multer": "1.4.7",
    "@types/node": "20.8.10",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "add": "2.0.6",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.3.1",
    "node-loader": "^1.0.1",
    "prettier": "2.8.3",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "^5.5.3",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@tools/models(|/.*)$": "<rootDir>/libs/tools/models/src/$1",
      "^@tools/misc(|/.*)$": "<rootDir>/libs/tools/misc/src/$1",
      "^@ports/currency-cloud(|/.*)$": "<rootDir>/libs/ports/currency-cloud/src/$1",
      "^@ports/ifx(|/.*)$": "<rootDir>/libs/ports/ifx/src/$1",
      "^@ports/email(|/.*)$": "<rootDir>/libs/ports/email/src/$1",
      "^@domain/use-cases(|/.*)$": "<rootDir>/libs/domain/use-cases/src/$1"
    }
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "workspaces": [
    "./libs/tools/*",
    "./libs/ports/*",
    "./libs/domain/*",
    "./apps/*"
  ]
}

{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "templates/**/*.ejs",
        "watchAssets": true
      },
      {
        "include": "templates/**/*.gif",
        "watchAssets": true
      },
      {
        "include": "templates/**/*.png",
        "watchAssets": true
      },
      {
        "include": "templates/**/*.pdf",
        "watchAssets": true
      }
    ],
    "webpack": true,
    "webpackConfigPath": "./webpack.config.js"
  },
  "root": "./"
}

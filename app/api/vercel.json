{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/$",
      "dest": "/src/main.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "src/main.ts",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH",
        "OPTIONS"
      ]
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}
